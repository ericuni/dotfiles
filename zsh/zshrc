# udf
function where() {
  env | grep VIMRUNTIME >/dev/null
  if [ $? -eq 0 ]; then
    echo "vim"
  else
    echo "raw"
  fi
}

function dm() {
  if [[ "x$1" == "xinit" ]]; then
    name=$2
    if [[ -z $name ]]; then
      echo "name invalid" >&2
      return 1
    fi
    home="$HOME/.container"
    if [[ ! -d $home ]]; then
      mkdir $home
    fi

    ## http://stackoverflow.com/questions/35860527/warning-error-disabling-address-space-randomization-operation-not-permitted/35860616
    docker run -dt \
      -v $home:/root \
      -v $HOME:/root/host \
      -w /root \
      -p 8022:22 \
      --privileged \
      --security-opt seccomp=unconfined \
      --hostname $name \
      --name $name \
      ubuntu:latest
  else
    docker exec -it $1 /bin/zsh
  fi
}

# texlive
p="/usr/local/texlive/2020"
if [[ -d $p ]]; then
  append_path "$p/bin/x86_64-darwin"
  export INFOPATH="$p/texmf-dist/doc/info:$INFOPATH"
fi

function clean() {
  setopt null_glob

  ## latex
  rm *.aux *.bbl *.blg *.lof *.lot *.toc *.thm *.snm *.vrb *.nav *.fdb_latexmk *.fls 2>/dev/null

  ## glog
  rm *.`hostname`.`whoami`.* 2>/dev/null
  for file in `ls *.INFO *.WARNING *.ERROR *.FATAL`
  do
    if [ -L $file ]; then
      rm $file
    fi
  done 2>/dev/null

  for file in `ls *.out *.log`
  do
    ## preserve nohup.out and err.log
    if [ "x$file" == "xnohup.out" -o "x$file" == "xerr.log" ]; then
      continue
    fi
    rm $file
  done 2>/dev/null
}

