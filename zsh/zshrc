# bazel
function bb() {
  target=":all"
  if [ $# -gt 0 ]; then
    if [[ $1 == :* ]]; then
      target=$1
      shift 1
    fi
  fi
  set -x
  bazel build $target $@
  set +x
}

function bt() {
  if [ $# -gt 0 ]; then
    bazel test --test_output=all $@
  else
    bazel test :all
  fi
}

function br() {
  bazel run --test_output=all $@
}
source_path $HOME/git/dotfiles/zsh/bazelfunctions.zsh

# golang
