{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true,
        "completeUnimported": true
      }
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cc", "cxx"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git/"],
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls"
         }
       }
    }
  }
}
