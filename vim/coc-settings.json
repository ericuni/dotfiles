{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true,
        "completeUnimported": true
      }
    },
    "clangd": {
      "command": "clangd",
      "filetypes": ["c", "cpp", "cc", "cxx", "h"],
      "rootPatterns": ["compile_flags.txt", ".git"],
      "requireRootPattern": true
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cc", "cxx", "h"],
      "rootPatterns": [".ccls", ".git"],
      "requireRootPattern": true,
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls"
         }
       }
    }
  }
}
